@model IEnumerable<OnRoadHelp.Models.UserLogin>

@{
    ViewBag.Title = "displayalluser";
    Layout = "~/Views/Shared/Admin_Dashboard_SharedView.cshtml";
}

<h2>Display All User</h2>


<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.FName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>


        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        @Html.HiddenFor(model => item.id)
        <tr>

            
        
            <td>
                @Html.DisplayFor(modelItem => item.FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>


            <td>

        @Html.ActionLink("Delete", "DeleteUser", new { aid = item.id },
new { onclick = "return confirm('Are sure wants to delete?');" })
    </td>
</tr>
    }

</table>
